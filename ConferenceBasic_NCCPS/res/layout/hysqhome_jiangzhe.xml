<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efeef3"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:background="#EFEEF3"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/initial_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_room_tag_normal"
            android:gravity="center">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/newsearch"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="搜索"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">
            <com.android.incongress.cd.conference.widget.ClearEditText
                android:drawableRight="@drawable/edittext_delete"
                android:id="@+id/speaker_search_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_media"
                android:background="@drawable/bg_room_tag_normal"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_theme_color"
                android:textSize="15dp"
                android:text="取消"/>
        </LinearLayout>
    </RelativeLayout>
    <com.android.incongress.cd.conference.utils.PinnedHeaderListView
        android:layout_below="@+id/search_title"
        android:id="@+id/hysq_home_jiangzhe_pinnedListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"  
        android:divider="@color/dividerColor"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
         >
    </com.android.incongress.cd.conference.utils.PinnedHeaderListView>

    <com.android.incongress.cd.conference.utils.BladeView
        android:layout_below="@+id/search_title"
        android:id="@+id/hysq_home_jiangzhe_mLetterListView"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <ListView
        android:layout_below="@+id/search_title"
        android:layout_marginTop="5dp"
        android:id="@+id/lv_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:divider="@null" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无讲者数据"
        android:id="@+id/tv_tips"
        android:textColor="@color/gray"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>