<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/meeting_yy_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F2F0F3"
        android:layout_height="40dp">
<TextView
    android:id="@+id/meeting_yy_no"
    android:textSize="14dp"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:layout_height="wrap_content"
    android:text="取消"/>
    <TextView
        android:id="@+id/meeting_yy_yes"
        android:textSize="14dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:paddingRight="15dp"
        android:textColor="@color/alpha_theme_color"
        android:layout_height="wrap_content"
        android:text="确定"/>
    </LinearLayout>
    <ListView
        android:layout_below="@+id/meeting_yy_layout"
        android:layout_marginTop="5dp"
        android:id="@+id/meeting_yy_list"
        android:divider="@null"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
</RelativeLayout>