<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <com.android.incongress.cd.conference.widget.IncongressTextView
        android:id="@+id/hysqhome_jiangzhe_group_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EFEEF3"
        android:gravity="center_vertical"
        android:textColor="#8b8a90"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_padding"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/professor_default"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_icon"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <com.android.incongress.cd.conference.widget.IncongressTextView
            android:id="@+id/hysqhome_jiangzhe_textItem"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/test"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#FF000000" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="等待验证"
            android:textColor="@color/black"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>