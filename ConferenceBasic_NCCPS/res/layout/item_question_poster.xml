<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_question_time"
                android:text="刚刚向"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/professor_default"
                android:layout_height="20dp" />

            <TextView
                android:text="Ashok Seth"
                android:textColor="@color/theme_color"
                android:id="@+id/tv_ask_name"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/question"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="#我是会议简介名字#"
            android:id="@+id/tv_meeting_name"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Q:他啶类药物利弊如何？"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:id="@+id/tv_question"
            android:textSize="@dimen/text_size_media"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_praise"
                android:text="12人点赞"
                android:drawableLeft="@drawable/praise"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:text="@string/question_check_poster"
                android:gravity="center_vertical"
                android:id="@+id/tv_share"
                android:textSize="@dimen/text_size_small"
                android:drawableLeft="@drawable/question_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>