<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    app:cardCornerRadius="0dp"
    android:paddingTop="@dimen/layout_padding"
    android:paddingBottom="@dimen/layout_padding"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_question_time"
                android:text="刚刚我向"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_question_meeting_me"
                    android:text="我向 "
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/professor_default"
                    android:layout_height="20dp" />
                <TextView
                    android:text="Ashok Seth"
                    android:textColor="@color/theme_color"
                    android:id="@+id/tv_ask_name"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_question_meeting_tw"
                    android:text="提问"
                    android:textSize="13sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="#我是会议简介名字#"
            android:id="@+id/tv_meeting_name"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Q:他啶类药物利弊如何？"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:id="@+id/tv_question"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_media"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_answer"
            android:textSize="@dimen/text_size_small"
            android:text="A:心内注射在现实中可行，但目前已经几乎不再使用，仅存理论上的可能性。在静脉通道不可用的情况下，还有比心内注射安全有效的。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:gravity="center_vertical"
                android:id="@+id/ll_praise"
                android:layout_height="wrap_content">

                <com.android.incongress.cd.conference.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:text="@string/icon_question_unpraised"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_praise"
                    android:text="12人点赞"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_share"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <com.android.incongress.cd.conference.widget.IconTextView
                    android:text="@string/icon_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="分享"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>