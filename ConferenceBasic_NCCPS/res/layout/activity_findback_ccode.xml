<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/please_choose_your_attend_type"
            android:textColor="@color/theme_color"
            android:layout_width="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_person"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/button_rb"
                android:padding="@dimen/layout_padding"
                android:text="@string/person_attendance"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_team"
                android:layout_width="match_parent"
                style="@style/button_rb"
                android:textColor="@color/text_selector"
                android:gravity="center"
                android:padding="@dimen/layout_padding"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/team_attendance"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_faculty"
                android:layout_width="match_parent"
                style="@style/button_rb"
                android:textColor="@color/text_selector"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="center"
                android:padding="@dimen/layout_padding"
                android:text="@string/faculty_attendance"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>