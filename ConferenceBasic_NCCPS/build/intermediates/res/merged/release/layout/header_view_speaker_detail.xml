<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:padding="36dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_speaker"
            android:src="@drawable/professor_default"
            android:layout_width="64dp"
            android:scaleType="centerCrop"
            android:layout_height="64dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_speaker_name"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_size_large"
                android:text="德古拉.凯奇.徐波"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_speaker_info"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                android:text="@string/secretary_info"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#f0EFF4"
        android:text="@string/secretary_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_padding"
        android:textSize="@dimen/text_size_media"
        android:textColor="@color/gray"
        android:layout_height="24dp" />
</LinearLayout>