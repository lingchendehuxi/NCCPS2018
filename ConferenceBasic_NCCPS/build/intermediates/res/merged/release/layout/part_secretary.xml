<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_secretary"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/secretary_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_secretary"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_media" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/my_secretary_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_secretary_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_secretary_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_secretary_task"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_small"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:textColor="#C8C8C8" />

    <TextView
        android:id="@+id/tv_secretary_session_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_small"
        android:textColor="#C8C8C8" />

</LinearLayout>