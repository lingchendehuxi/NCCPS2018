<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/web_framelayout"
    android:layout_height="match_parent" >

    <WebView
        android:id="@+id/wv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.incongress.cd.conference.widget.IncongressTextView
        android:id="@+id/itv_net_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/incongress_connect_remaind"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/pb_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66CACACA"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            style="?android:attr/progressBarStyleSmall"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>