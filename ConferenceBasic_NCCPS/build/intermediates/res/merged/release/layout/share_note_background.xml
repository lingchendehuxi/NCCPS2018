<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/share_background"
    android:layout_height="wrap_content">

    <TextView
        android:drawableLeft="@drawable/icon_share"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/tv_share"
        android:drawablePadding="8dp"
        android:text="@string/dzbb_share"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#42484B"/>

    <TextView
        android:drawableLeft="@drawable/wddy_icon_note"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/tv_make_note"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:drawablePadding="13dp"
        android:text="@string/session_take_note"
        android:layout_weight="1"/>

</LinearLayout>