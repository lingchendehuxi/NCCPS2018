<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="5dp"
     >

    <ImageView
        android:id="@+id/exhibitor_activity_gird_image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
         android:scaleType="fitCenter"
       android:adjustViewBounds="true"
         />

    <com.android.incongress.cd.conference.widget.IncongressTextView
        android:id="@+id/exhibitor_activity_gird_text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000"
        android:layout_below="@id/exhibitor_activity_gird_image"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:maxLines="2"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/exhibitor_activity_gird_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zshd_icon_hot"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>