<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_meeting_name"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_media"
            android:layout_height="wrap_content"
            android:text="过渡到人体首次研究：当前趋势和未来挑战" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_meeting_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/normal_gray"
                android:text="03-17 10:00-12:00" />

            <TextView
                android:id="@+id/tv_meeting_room"
                android:layout_width="0dp"
                android:textColor="@color/normal_gray"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="Ballroom ABC,level 1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:id="@+id/ll_next"
        android:gravity="right">

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_next" />
    </LinearLayout>

</LinearLayout>