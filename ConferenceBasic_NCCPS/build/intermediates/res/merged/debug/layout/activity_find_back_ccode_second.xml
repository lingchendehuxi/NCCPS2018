<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <com.android.incongress.cd.conference.widget.ClearEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/button_unselected"
            android:drawableRight="@drawable/edittext_delete"
            android:hint="@string/true_name"
            android:inputType="text"
            android:padding="@dimen/layout_padding"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_media" />

        <com.android.incongress.cd.conference.widget.ClearEditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/button_unselected"
            android:drawableRight="@drawable/edittext_delete"
            android:hint="@string/normal_phone_number"
            android:inputType="text"
            android:padding="@dimen/layout_padding"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_media" />

        <Button
            android:id="@+id/get_ccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/bg_button"
            android:text="@string/get_c_code"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</LinearLayout>