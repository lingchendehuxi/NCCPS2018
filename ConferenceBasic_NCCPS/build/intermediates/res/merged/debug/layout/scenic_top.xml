<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingTop="6dp"
            android:text="@string/media_center"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/iv_news_notification"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_load_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingTop="6dp"
            android:visibility="visible"
            android:text="@string/industrial_events"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/iv_exhibitors_activity"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="76dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_load_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingTop="6dp"
            android:text="@string/live_show"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</android.support.v7.widget.CardView>