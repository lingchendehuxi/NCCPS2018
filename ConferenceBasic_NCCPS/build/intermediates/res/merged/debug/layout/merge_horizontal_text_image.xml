<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="16sp"
            android:text="logo"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dp"
            android:layout_alignRight="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/default_load_bg" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_msg_nums"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/home_circle_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_hd_session_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hdsession_loading"
        android:visibility="gone" />
</RelativeLayout>