<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.android.incongress.cd.conference.widget.VerticalLinearLayout
        android:id="@+id/id_main_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guide_1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guide_2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guide_3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guide_4" />
    </com.android.incongress.cd.conference.widget.VerticalLinearLayout>

    <TextView
        android:id="@+id/tv_go"
        android:layout_alignParentBottom="true"
        android:text="@string/guide_in"
        android:visibility="gone"
        android:textSize="@dimen/text_size_large"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_margin="@dimen/layout_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>