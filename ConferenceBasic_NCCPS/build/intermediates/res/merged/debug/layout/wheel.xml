<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >
    <LinearLayout
        android:id="@+id/ll_operation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wheel_esc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/negative_button"
            android:textColor="#888888" />

        <View
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/wheel_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/positive_button"
            android:textColor="@color/theme_color" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_start_time"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="@color/normal_gray"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="@string/search_start_time"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_end_time"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="@color/normal_gray"
            android:padding="6dp"
            android:layout_weight="1"
            android:text="@string/search_end_time"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_above="@id/ll_operation_bar"
        android:layout_below="@id/ll_time_info"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

